<p id="notice"><%= notice %></p>

<h1>Listing Reclamos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre empresa</th>
      <th>Reclamo</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reclamos.each do |reclamo| %>
      <tr>
        <td><%= reclamo.nombre_empresa %></td>
        <td><%= reclamo.reclamo %></td>
        <td><%= reclamo.user %></td>
        <td><%= link_to 'Show', reclamo %></td>
        <td><%= link_to 'Edit', edit_reclamo_path(reclamo) %></td>
        <td><%= link_to 'Destroy', reclamo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

